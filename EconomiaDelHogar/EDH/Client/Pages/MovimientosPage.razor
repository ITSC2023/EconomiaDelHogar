@page "/movimientos"
@using EDH.Shared.Modelos;
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@inject HttpClient Http


<h3>Movimientos</h3>

@if (movimientos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in movimientos)
            {
                <tr>
                    <td>@item.Fecha</td>
                    <td>@item.Categoria?.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.FormaPago</td>
                    <td>@item.Importe</td>
                    <td>@item.Cuenta?.Nombre</td>


                    <div class="d-grid gap-2 d-md-block">
                    <td><button class="btn btn-success"><i class="bi bi-pencil-square"></i></button></td>
                    <td><button class="btn btn-danger"><i class="bi bi-trash3"></i></button></td>
                    </div>
                </tr>
            }
        </tbody>
    </table>
}


<p>Completa los campos para agregar una nueva categoria</p>

<div class="row">
    <div class="col">
        <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre de la Categoria">
    </div>
    <div class="col">
        <input type="text" class="form-control" placeholder="Icono" aria-label="Icono">
    </div>
</div>

<div class="col text-end p-2">

    <button type="button" class="btn btn-outline-primary">Agregar</button>

</div>


@code {
    public Movimiento[]? movimientos;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            movimientos = await Http.GetFromJsonAsync<Movimiento[]>("Movimientos");

        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }


    }


}
